# Sanity Project Configuration
# Copy this file to .env.local and fill in your actual values

# Your new Sanity project ID (get this from sanity.io/manage)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_new_project_id_here

# Dataset name (usually 'production')
NEXT_PUBLIC_SANITY_DATASET=production

# API version (use current date)
NEXT_PUBLIC_SANITY_API_VERSION=2025-01-27

# Write token for admin operations (get this from your Sanity project API settings)
SANITY_WRITE_TOKEN=your_new_write_token_here

# Security Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# API Security
SECURITY_WEBHOOK_URL=your_security_webhook_url_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Content Security Policy
CSP_VIOLATION_WEBHOOK=your_csp_violation_webhook_url_here
CSP_MODE=production
CSP_REPORT_ONLY=false

# CSRF Protection
CSRF_SECRET=your_csrf_secret_key_here
CSRF_TOKEN_LENGTH=32
CSRF_COOKIE_NAME=csrf-token
CSRF_HEADER_NAME=x-csrf-token

# Rate Limiting (optional overrides)
RATE_LIMIT_GENERAL_MAX=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_BLOG_MAX=10
RATE_LIMIT_UPLOAD_MAX=20

# Monitoring & Logging
ENABLE_SECURITY_LOGGING=true
ENABLE_REQUEST_LOGGING=true

# HTTPS Enforcement
FORCE_HTTPS=true
